{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build editor",
            "type": "process",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/editor/editor.csproj",
                "--no-restore",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "never",
                "revealProblems": "onProblem"
            }
        },
        {
            "label": "build noz",
            "type": "process",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/src/noz.csproj",
                "--no-restore",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "never",
                "revealProblems": "onProblem"
            }
        }
    ]
}
